/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "",
    "paths": {
      "@model/*": ["src/app/core/model/*"],
      "@shared/*": ["src/app/core/*", "src/app/logbook/core/*", "src/app/overview/core/*", "src/app/login/core/*"],
      "@widgets/*": ["src/app/core/logbook/widgets/*"]
    },
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
